<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RememberThis.QuestionPage">
    <ScrollView>
        <StackLayout
            Margin="10, 0, 10, 10">
            <Image 
                Source="{Binding ImageName}" 
                MaximumWidthRequest="400" 
                MaximumHeightRequest="400"/>
            <Grid
                Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <Label 
                    Grid.Column="0"
                    Style="{StaticResource SubLabel}"
                    HorizontalOptions="Start"
                    Text="Вопрос:"
                    FontSize="20"/>
                <Label 
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    FontSize="20"
                    Text="{Binding Problem}"/>
            </Grid>
            <Button 
                FontSize="20"
                Margin="0, 10, 0, 0"
                x:Name="ButtonPrompt" 
                Text="Показать подсказку"
                Clicked="ButtonShowPromptOnClicked"/>
            <Grid
                Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource SubLabel}"
                    x:Name="LabelPrompt1" 
                    FontSize="20"
                    Text="Подсказка:" 
                    IsVisible="False"/>
                <Label 
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    x:Name="LabelPrompt2" 
                    Text="{Binding Prompt}" 
                    FontSize="20"
                    IsVisible="{Binding PromptIsVisible}"/>
            </Grid>
            <Grid
                Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <Label 
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource SubLabel}"
                    Text="Ваш ответ: "
                    FontSize="20"/>
                <Editor 
                    Grid.Column="1"
                    AutoSize="TextChanges"
                    FontSize="20"
                    Placeholder="введите ответ"
                    x:Name="Answer"/>
            </Grid>
            <Grid
                Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource SubLabel}"
                    Text="Правильный ответ:"
                    FontSize="20"/>
                <Label 
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    x:Name="LabelAnswer2" 
                    Text="{Binding Answer}"
                    IsVisible="False"
                    FontSize="20"/>
            </Grid>
            <Button
                Margin="0, 10, 0, 0"
                x:Name="ButtonCommit" 
                Text="Подтвердить" 
                FontSize="20"
                Clicked="ButtonCommitOnClicked"/>
            <Button 
                Margin="0, 10, 0, 0"
                x:Name="ButtonContinue" 
                Text="Продолжить" 
                FontSize="20"
                Clicked="ButtonContinueOnClicked" 
                IsEnabled="False"/>
        </StackLayout>
    </ScrollView>
</ContentPage>