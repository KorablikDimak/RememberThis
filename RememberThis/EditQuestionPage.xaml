<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RememberThis.EditQuestionPage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Problem: "/>
            <Editor Text="{Binding Problem}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Image: "/>
            <Editor Text="{Binding ImageName}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Prompt: "/>
            <Editor Text="{Binding Prompt}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Answer: "/>
            <Editor Text="{Binding Answer}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>