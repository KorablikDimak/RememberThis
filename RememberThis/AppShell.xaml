<?xml version="1.0" encoding="utf-8"?>
<Shell 
    x:Class="RememberThis.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RememberThis"
    Title="RememberThis">

    <FlyoutItem
        Title="Все тесты">
        <ShellContent
                ContentTemplate="{DataTemplate local:TestListPage}"/>
    </FlyoutItem>
    <FlyoutItem
        Title="Активные">
        <ShellContent
                ContentTemplate="{DataTemplate local:ActiveTestListPage}"/>
    </FlyoutItem>
    <FlyoutItem
        Title="Завершенные">
        <ShellContent 
                ContentTemplate="{DataTemplate local:CompletedTestListPage}"/>
    </FlyoutItem>
</Shell>